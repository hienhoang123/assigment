{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block nav %}{% endblock %}
{% block body %}

		<section class="vh-100" style="background-color: #9A616D;">
			{% for message in app.session.flashbag.get('Warning') %}
				<p class="alert alert-warning">{{ message }}</p>
			{% endfor %}
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="container py-5 h-50">
					<div class="row d-flex justify-content-center align-items-center h-30">
						<div class="col col-xl-7">
							<div class="card" style="border-radius: 1rem;">
								<div class="row g-0">
									<div class="col-md-7 col-lg-7 d-flex align-items-center">
										<div class="card-body p-4 p-lg-5 text-black">
											<form>
												<div class="d-flex align-items-center mb-3 pb-1">
													<i class="fas fa-cubes fa-2x me-3" style="color: blue;"></i>
												</div>
												<h3>Sign into your account</h3>
												<div class="form-outline mb-4">
													<label for="inputUsername">Username</label>
													<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
												</div>

												<div class="form-outline mb-4">
													<label for="inputPassword">Password</label>
													<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
													<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
												</div>

												<div class="pt-1 mb-4">
													<button class="btn btn-lg btn-primary" type="submit">Sign in</button>
												</div>

												<p class="mb-3 pb-lg-2" style="color: #393f81;">Don't have an account?
													<a class="text text-success" href="{{ path('app_register') }}">Register new account</a>
												</p>
												<a>
													<input type="checkbox" name="_remember_me">
													Remember me</label>
											</a>
											<a href="#!" class="small text-muted">Terms of use.</a>
											<a href="#!" class="small text-muted">Privacy policy</a>
										</form>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
