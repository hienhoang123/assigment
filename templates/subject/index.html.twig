{% extends 'base.html.twig' %}

{% block title %}Subject index
{% endblock %}

{% block body %}
	<div class="container col-md-6 mt-5 text-center">
		<h1 class="text text-success">Subject List</h1>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>		
                {% set i = 0 %}
				{% for subject in subjects %}
					<tr>
						<td>{{ subject.id }}</td>
						<td>{{ subject.name }}</td>
                        
                        
						<td>
							<a href="{{ path('subject_detail', {'id': subject.id}) }}">show</a>
							<a href="{{ path('subject_edit', {'id': subject.id}) }}">edit</a>
						</td>
                        
					</tr>
                    
                      {% set i = i+1 %}        
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
                <h1>{{ i }}</h1>
			</tbody>
		</table>

		<a href="{{ path('subject_add') }}" class="btn btn-success">Add author</a>
	</div>
{% endblock %}
